{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Person",
    "type": "object",
    "required": ["name", "age"],
    "properties": {
      "name": {
        "type": "string",
        "description": "The person's first name."
      },
      "age": {
        "description": "Age in years which must be equal to or greater than zero.",
        "type": "integer",
        "minimum": 18
      }
    }
  }